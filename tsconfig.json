{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "target": "ES2024",
    "lib": ["DOM", "ESNext"],
    "types": ["node", "@types/magicmirror-module"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
