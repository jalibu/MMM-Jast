{
  "name": "mmm-jast",
  "version": "2.9.5",
  "description": "A minimalistic stock ticker based on Yahoo's finance API for the MagicMirrorÂ² platform.",
  "main": "MMM-Jast.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jalibu/MMM-Jast.git"
  },
  "author": "Jan.Litzenburger@gmail.com",
  "license": "MIT",
  "keywords": [
    "magicmirror",
    "stock",
    "stocks",
    "ticker",
    "finance",
    "yahoo",
    "currency",
    "currencies",
    "crypto",
    "market",
    "shares"
  ],
  "bugs": {
    "url": "https://github.com/jalibu/MMM-Jast/issues"
  },
  "homepage": "https://github.com/jalibu/MMM-Jast#readme",
  "dependencies": {
    "yahoo-finance2": "^3.11.2"
  },
  "scripts": {
    "build": "rollup -c",
    "demo": "cd ../../ && MM_CONFIG_FILE=modules/MMM-Jast/config.demo.js node --run start:wayland:dev",
    "dev": "rollup -c --sourcemap=inline",
    "dev:watch": "node --run dev -- --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "prepare": "node -e \"try{require('simple-git-hooks').run()}catch(e){}\"",
    "release": "commit-and-tag-version --commit-all --config ./changelog.config.js",
    "test": "node --run type-check && node --run lint && vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/magicmirror-module": "^2.16.6",
    "@vitest/coverage-v8": "^4.0.16",
    "commit-and-tag-version": "^12.6.1",
    "eslint": "^9.39.2",
    "eslint-plugin-jsdoc": "^61.5.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rollup": "^4.55.1",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  }
}
